{
  "private": true,
  "name": "cors-proxy",
  "version": "0.1.0",
  "description": "CORS proxy",
  "repository": "https://github.com/MaxMilton/cors-proxy",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "prod:start": "pm2 start ecosystem.config.js",
    "prod:update": "pm2 save && yarn global add pm2 && pm2 update && yarn install --pure-lockfile --production && pm2 reload ecosystem.config.js",
    "lint": "yarn lint:md && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:js": "eslint --ext js,md --report-unused-disable-directives .",
    "lint:types": "tsc --noEmit",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "@minna-ui/utils": "0.30.0",
    "@sentry/node": "5.5.0",
    "httpie": "1.1.2"
  },
  "devDependencies": {
    "@types/node": "12.7.3",
    "@wearegenki/renovate-config": "1.0.0",
    "codecov": "3.5.0",
    "eslint": "6.1.0",
    "jest": "24.8.0",
    "minna-tools": "0.30.3",
    "prettier": "1.18.2",
    "remark-cli": "7.0.0",
    "typescript": "3.5.3"
  },
  "prettier": "minna-tools/prettier",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config",
      "@minna-ui/eslint-config/node-js"
    ]
  },
  "eslintIgnore": [
    "**/node_modules/**",
    "__sapper__/**",
    "_backup/**",
    "test/coverage/**"
  ],
  "remarkConfig": {
    "plugins": [
      "minna-tools/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools"
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">=10.16.0"
  }
}
