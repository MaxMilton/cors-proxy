{
  "private": true,
  "name": "cors-proxy",
  "version": "0.2.0",
  "description": "CORS proxy",
  "repository": "https://github.com/MaxMilton/cors-proxy",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "prod:start": "pm2 start ecosystem.config.js",
    "prod:update": "pm2 save && yarn global add pm2 && pm2 update && yarn install --pure-lockfile --production && pm2 reload ecosystem.config.js",
    "lint": "yarn lint:md && yarn lint:js && yarn lint:types",
    "lint:md": "remark --frail --quiet .",
    "lint:js": "eslint --ext html,js,md,ts .",
    "lint:types": "tsc --noEmit",
    "test": "jest --notify --watch",
    "test-ci": "jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "@minna-ui/utils": "0.34.0",
    "@sentry/node": "5.9.0",
    "httpie": "1.1.2"
  },
  "devDependencies": {
    "@types/node": "12.12.7",
    "@wearegenki/renovate-config": "1.0.0",
    "codecov": "3.6.1",
    "eslint": "6.6.0",
    "jest": "24.9.0",
    "minna-tools-essential": "0.35.0",
    "prettier": "1.19.1",
    "remark-cli": "7.0.1",
    "typescript": "3.7.2"
  },
  "prettier": "minna-tools-essential/prettier",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@minna-ui/eslint-config",
      "@minna-ui/eslint-config/node-js"
    ]
  },
  "eslintIgnore": [
    "test/coverage/**"
  ],
  "remarkConfig": {
    "plugins": [
      "minna-tools-essential/remark"
    ]
  },
  "jest": {
    "preset": "minna-tools-essential"
  },
  "renovate": {
    "extends": [
      "@wearegenki"
    ]
  },
  "engines": {
    "node": ">10.0.0"
  }
}
